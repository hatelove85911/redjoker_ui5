<mvc:View controllerName="ui5seed.view.Players"
          xmlns:mvc="sap.ui.core.mvc"
          displayBlock="true"
          xmlns="sap.m">
  <Page title="{i18n&gt;Players}">
    <headerContent>
      <Button icon="sap-icon://add" press="createPlayer"></Button>
    </headerContent>
    <content>
      <List items="{/Players}">
        <StandardListItem title="{name}"></StandardListItem>
      </List>
    </content>
  </Page>
</mvc:View>
