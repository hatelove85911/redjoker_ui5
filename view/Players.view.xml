<mvc:View
    controllerName="ui5seed.view.Players"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m">
    <Page title="{i18n>Players}">
        <headerContent>
            <Button icon="sap-icon://add" press="onAddPlayer"/>
        </headerContent>        
        <content>
            <List items="{/players}">
                <items>
                  <StandardListItem title="{name}" />
                </items>
            </List>

        </content>
    </Page>
</mvc:View>
